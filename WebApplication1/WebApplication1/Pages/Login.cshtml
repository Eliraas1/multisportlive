@page
@model WebApplication1.Pages.LoginModel
@{ }


<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card bg-dark text-white" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">

                    <div class="mb-md-5 mt-md-4 pb-5 align-content-center">

                        <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                        <p class="text-white-50 mb-5">Please enter username and password!</p>
                        <form method="post">
                            <div class="form-outline form-white mb-4 col-lg-6  offset-3">
                                <input type="text" asp-for="Model.EmailOrUserName" class="form-control" placeholder="Username\Email" />
                                <span asp-validation-for="Model.EmailOrUserName" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4 col-lg-6 offset-3">
                                <input type="password" asp-for="Model.Password" class="form-control" placeholder="Password" />
                                <span asp-validation-for="Model.Password" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4 col-lg-6 offset-3">
                                <label class="form-check-label" asp-for="Model.RememberMe">Remember Me?</label>
                                <input type="checkbox" asp-for="Model.RememberMe" class="form-check-input" />
                            </div>
                            <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">Forgot password?</a></p>

                            <button class="btn btn-outline-light btn-lg px-5" type="submit">Login</button>

                            </form>
                    </div>

                    <div>
                        <p class="mb-0">
                            Don't have an account? <a asp-page="/Register" class="text-white-50 fw-bold">Sign Up</a>
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
